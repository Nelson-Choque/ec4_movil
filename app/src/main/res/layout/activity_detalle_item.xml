<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetalleItemActivity">



    <ImageView
        android:id="@+id/ivDetalleX"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/iconorders"
        tools:srcCompat="@drawable/iconorders"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tvIdItemLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="ID:"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivDetalleX"
        android:textColor="?attr/colorOnPrimaryContainer"
        android:layout_marginLeft="8dp"
        />


    <TextView
        android:id="@+id/tvIdItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        android:textColor="?attr/colorOnPrimaryContainer"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@+id/tvIdItemLabel"
        app:layout_constraintTop_toBottomOf="@+id/ivDetalleX" />


    <TextView
        android:id="@+id/tvTittleItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"

        android:text="Titulo"
        android:textColor="?attr/colorOnPrimaryContainer"
        android:textSize="24sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvIdItem" />


    <Button
        android:id="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/tvTittleItem"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="AÃ±adir a favoritos"
        android:layout_marginTop="16dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="207dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"


        />





</androidx.constraintlayout.widget.ConstraintLayout>